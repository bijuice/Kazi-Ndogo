<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:textAlignment="center"
    tools:context=".Job_Listing"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="412dp"
        android:layout_height="84dp"
        android:background="@drawable/wave"
        android:hint="@string/listing"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/listing2"
        android:textAlignment="center"
        android:textColor="#0A5687"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/jobsbackBtn"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/jobIdView"
        android:layout_width="221dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:background="@color/mustard"
        android:drawableStart="@android:drawable/ic_secure"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="@string/job_id"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.027" />

    <EditText
        android:id="@+id/jobnameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/job_title"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobIdView"
        app:layout_constraintVertical_bias="0.073"
        android:autofillHints="" />

    <EditText
        android:id="@+id/descriptionView"
        android:layout_width="326dp"
        android:layout_height="175dp"
        android:background="@drawable/line"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/job_description"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobnameView"
        app:layout_constraintVertical_bias="0.12"
        android:autofillHints="" />

    <TextView
        android:id="@+id/payView"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:background="@color/colorPrimary"
        android:hint="@string/payout"
        android:padding="8dp"
        android:textAlignment="viewStart"
        android:textColor="@color/Orange"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionView"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="203dp"
        android:layout_height="81dp"
        android:background="@drawable/line"
        android:hint="@string/contact_info"
        android:padding="4dp"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.711"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payView" />

    <ImageButton
        android:id="@+id/dialerBtn"
        android:layout_width="71dp"
        android:layout_height="62dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.675"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payView"
        app:layout_constraintVertical_bias="0.494"
        app:srcCompat="@android:drawable/stat_notify_missed_call"
        android:contentDescription="@string/todo1" />

</androidx.constraintlayout.widget.ConstraintLayout>